{
    "compilerOptions": {
        "target": "es6",
        "module": "nodenext",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "src/@types"],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@test/*": [
                "./test/*"
            ]
        },
    },
    "include": ["./src/**/*", "./test/**/*"]
}